ALGORITHM Pou
VAR
    ch:="":CHAR
    nb_char,nb_values:=0:INTEGER
    nb_words:=1:INTEGER
BEGIN
 write("write her a paragraphe end with point : ")
 WHILE (ch<>".") DO
nb_char:=nb_char+1
IF (ch:=" ") THEN
nb_words:=nb_words+1
END_IF
IF (ch:="a"or ch:="e"or ch:="i"or ch:="o"or ch:="u"or ch:="y" or ch:="A"or ch:="E"or ch:="I"or ch:="O"or ch:="U"or ch:="Y") THEN
    nb_values:= nb_values+1
END_IF
 END_WHILE
END